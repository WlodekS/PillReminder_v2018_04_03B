<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_medicine_id_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toStartOf="@+id/txt_medicine_quantity_check"
        android:text="id"
        android:fontFamily="@font/fjalla_one"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_medicine_name_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txt_medicine_quantity_check"
        android:text="name "
        android:fontFamily="@font/fjalla_one"
        android:textSize="24sp"
        android:textColor="@color/colorListMedineName"/>

    <Button
        android:id="@+id/btn_medicine_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:onClick="updateMedicineInStore"
        android:text="UPDATE" />

    <TextView
        android:id="@+id/txt_medicine_form_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_medicine_name_check"
        android:layout_below="@+id/txt_medicine_name_check"
        android:fontFamily="@font/fjalla_one"
        android:text="medicine form"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_medicine_quantity_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_medicine_check"
        android:text="quantity:"
        android:fontFamily="@font/fjalla_one"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_medicine_quantity_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lbl_medicine_quantity_check"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/lbl_medicine_quantity_check"
        android:text="quantity"
        android:fontFamily="@font/fjalla_one"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_medicine_form_check"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="ID:"
        android:fontFamily="@font/fjalla_one"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_medicine_id_check"
        android:fontFamily="@font/fjalla_one"
        android:text="Form:"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_medicine_doseOption_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_medicine_quantity_check"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/txt_medicine_quantity_check"
        android:fontFamily="@font/fjalla_one"
        android:text="DoseOption"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>